<h1>New Task</h1>

<%= form_for(@task) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :priority %>
    <%= f.text_field :priority %>
    <%= f.label :due_date %>
    <%= f.text_field :due_date %>
    <%= f.submit "Create Task" %>
<% end %>

<%= link_to 'Back', tasks_path %>
